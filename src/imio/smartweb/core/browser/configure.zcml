<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="imio.smartweb">

  <include package=".procedure" />
  <include package=".subsite" />

  <!-- Set overrides folder for Just-a-Bunch-Of-Templates product -->
  <include package="z3c.jbot" file="meta.zcml" />
  <browser:jbot
      directory="overrides"
      layer="imio.smartweb.core.interfaces.IImioSmartwebCoreLayer"
      />

  <!-- Publish static files -->
  <plone:static
      name="imio.smartweb.core"
      type="plone"
      directory="static"
      />

  <browser:page
      name="smartweb-controlpanel"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".controlpanel.SmartwebControlPanelView"
      permission="cmf.ManagePortal"
      />

  <browser:page
      name="full_view_item"
      for="*"
      class="plone.app.contenttypes.browser.full_view.FullViewItem"
      template="templates/full_view_item.pt"
      layer="imio.smartweb.core.interfaces.IImioSmartwebCoreLayer"
      permission="zope2.View"
      />

</configure>
