<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="content-core">
<metal:content-core define-macro="content-core">
<script>
    function handleDoubleClick(event, uid) {
      var editForm = document.getElementById("editForm_" + uid);
      var clickedElement = event.target;
      editForm.style.display = "block";
      clickedElement.style.display = "none";
    }
</script>
    <metal:macro use-macro="context/@@sections_macros/section_edition" />
  <div tal:define="image context/image | nothing;"
       class="container section-container section-text"
       id=""
       tal:attributes="id string:container-section-${context/id}">
    <metal:macro use-macro="context/@@sections_macros/section_title" />
    <div tal:define="collapse_klass python: 'collapse' if context.collapsible_section else '';
                     klass string:body-section figure-${context/alignment} figure-${context/image_size} ${collapse_klass};"
         tal:attributes="class python:'{} {}'.format(klass, 'no-image') if not image else klass;
                         id string:body-section-${context/id}">
      <tal:cond condition="image">
        <figure>
          <img alt="" tal:attributes="src python:view.get_scale_url(context);" />
          <figcaption tal:condition="context/image_caption" tal:content="context/image_caption"></figcaption>
        </figure>
      </tal:cond>
      <!--hx-trigger="click[ctrlKey]"-->
      <div class="text"
           hx-swap="innerHTML"
           tal:attributes="hx-get string:${context/absolute_url}/@@gettext;
                           id string:editableText_${context/UID}aaa;
                           hx-target string:#editableText_${context/UID};
                           ondblclick string:handleDoubleClick(event, '${context/UID}')"
           tal:content="structure context/text/output | nothing"
           />
      <div class="text"
           tal:attributes="id string:editForm_${context/UID}"
           style="display:none;">
          <form hx-swap="innerHTML"
                tal:attributes="hx-post string:${context/absolute_url}/@@savetext;
                                hx-target string:#editForm_${context/UID}">
              <textarea name="newText"
                        tal:attributes="id string:editableText_${context/UID};
                                        hx-val string:editableText_${context/UID}">
              </textarea>
              <button type="submit">Save</button>
              <input name="_authenticator" type="hidden"
                     tal:attributes="value context/@@authenticator/token">
          </form>
      </div>
    </div>
</div>
</metal:content-core>
</metal:main>

</body>
</html>
