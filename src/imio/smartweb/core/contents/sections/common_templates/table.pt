<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="content-core">
<metal:content-core define-macro="content-core">
<div class="section-container"
     tal:define="can_edit python: checkPermission('Modify portal content', context);
                 items view/items"
     tal:attributes="style view/background_style">

  <tal:if tal:define="show_section python: can_edit or items"
          tal:condition="show_section">

    <metal:macro use-macro="context/@@sections_macros/section_edition" />

    <p tal:replace="structure context/@@description" />

    <div class="body-section">

      <tal:if tal:condition="items">

        <ul tal:define="only_one_item python: len(items) == 1;
                        bs_col python: 12 // context.nb_results_by_batch"
            tal:omit-tag="only_one_item">

          <li class="section_links_list row"
              tal:omit-tag="only_one_item"
              tal:repeat="batch items">
              <div class=""
                   tal:repeat="item batch"
                   tal:attributes="class string:col md-${bs_col}">
                  <div tal:define="item_has_image item/has_image;
                                   show_lead_image python: getattr(context, 'show_items_lead_image', True);
                                   portal context/@@plone_portal_state/portal;
                                   open_in_new_tab item/open_in_new_tab | nothing;"
                       class="section_links_item">
                      <a class="section_links_item_image"
                         tal:attributes="href item/url;
                                         target python:'_blank' if (open_in_new_tab and not can_edit) else ''">
                        <img tal:condition="python: item_has_image and show_lead_image"
                             tal:attributes="alt item/title;
                                             src item/image"
                             class="d-block w-100" />
                        <span class="section_links_item_title"
                              tal:content="item/title">Item Title</span>
                        <p tal:condition="context/show_items_description | nothing"
                           tal:content="item/description"></p>
                        <span tal:condition="context/show_items_publication_date | nothing">
                          <span i18n:translate="">Published</span>
                          <span class="pat-moment" data-pat-moment="format:relative;"
                                tal:content="item/effective | nothing"/>
                        </span>
                        <span class="item-infos"
                              tal:condition="item/item_infos | nothing"
                              tal:content="item/item_infos"/>
                      </a>
                  </div>
              </div>
          </li>

        </ul>

        <div class="see_all"
             tal:condition="context/link_text | nothing">
           <a href="#"
              tal:attributes="href view/see_all_url"
              tal:content="context/link_text"></a>
        </div>

      </tal:if>

    </div>

  </tal:if>
</div>
</metal:content-core>
</metal:main>

</body>
</html>
