<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="content-core">
<metal:content-core define-macro="content-core">
<div class ="section-container section_links"
     tal:define="can_edit python: checkPermission('Modify portal content', context);
                 items context/listFolderContents;">

  <tal:if tal:define="show_section python: can_edit or items"
          tal:condition="show_section">

    <metal:macro use-macro="context/@@sections_macros/section_edition" />

    <div class="body-section"
         tal:condition="items">
      <div class="row">
        <div class="col section_links_item" tal:repeat="item items">
          <div tal:define="item_has_image python:item.getIcon;
                           thumb_scale context/image_scale;
                           portal context/@@plone_portal_state/portal;
                           image_scale item/@@images;">
              <a class="section_links_item_image" tal:attributes="href item/absolute_url;"
                 tal:condition="python: item_has_image and thumb_scale">
                <img tal:replace="structure python:image_scale.tag('image', scale=thumb_scale)" />
              </a>
              <a class="section_links_item_title" tal:attributes="href item/absolute_url;
                                 alt item/description"
                 tal:content="item/title">Item Title
              </a>
          </div>
        </div>
      </div>
    </div>

  </tal:if>
</div>
</metal:content-core>
</metal:main>

</body>
</html>
