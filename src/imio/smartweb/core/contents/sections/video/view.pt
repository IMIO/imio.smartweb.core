<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/@@main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="content-core">
<metal:content-core define-macro="content-core">
<div tal:define="css_class python: context.bootstrap_css_class or ''"
     tal:attributes="class string:section_video $css_class">

  <div class="content-section"
       tal:attributes="style view/background_style">

    <metal:macro use-macro="context/@@sections_macros/section_edition" />

    <div tal:content="structure view/get_embed_video" />

  </div>

</div>
</metal:content-core>
</metal:main>

</body>
</html>
