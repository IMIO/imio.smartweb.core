<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:cache="http://namespaces.zope.org/cache"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="imio.smartweb">

  <browser:page
    name="view"
    for="imio.smartweb.core.contents.IDirectoryView"
    class=".view.DirectoryViewView"
    template="view.pt"
    permission="zope2.View"
    layer="imio.smartweb.core.interfaces.IImioSmartwebCoreLayer"
    />

  <plone:service
    name="@results"
    method="GET"
    accept="application/json"
    for="imio.smartweb.core.contents.IDirectoryView"
    factory=".endpoint.DirectoryEndpointGet"
    permission="zope2.View"
    layer="imio.smartweb.core.interfaces.IImioSmartwebCoreLayer"
    />
  <cache:ruleset
    for=".endpoint.DirectoryEndpointGet"
    ruleset="imio.smartweb.core.rest"
    zcml:condition="have plone-app-caching-3"
    />

  <plone:service
    name="@results-filters"
    method="GET"
    accept="application/json"
    for="imio.smartweb.core.contents.IDirectoryView"
    factory=".endpoint.DirectoryFiltersEndpointGet"
    permission="zope2.View"
    layer="imio.smartweb.core.interfaces.IImioSmartwebCoreLayer"
    />

  <cache:ruleset
    for=".endpoint.DirectoryFiltersEndpointGet"
    ruleset="imio.smartweb.core.rest"
    zcml:condition="have plone-app-caching-3"
    />

</configure>
