<?xml version="1.0"?>
<registry
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="imio.smartweb">

    <records interface="imio.smartweb.core.browser.controlpanel.ISmartwebControlPanel"
             prefix="smartweb" />

    <records interface="imio.smartweb.core.browser.controlpanel_siteadmin.ISmartwebSiteAdminControlPanel"
             prefix="smartweb" />

    <record name="plone.custom_plugins"
            interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema"
            field="custom_plugins">
      <field type="plone.registry.field.List">
        <value_type type="plone.registry.field.TextLine" />
      </field>
      <value>
        <element>text_expand|++resource++tinymce.js</element>
        <element>suggest_titles|++resource++tinymce.js</element>
        <element>ia|++resource++tinymce.js</element>
        <element>ia_menuitems|++resource++tinymce.js</element>
      </value>
    </record>

    <record name="plone.menu"
            interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema">
      <value purge="false">
        {
          "ia_menuitems": {
            "title": "IA",
            "items": "ia_text_expand ia_suggest_titles"
          }
        }
      </value>
    </record>


    <record name="plone.toolbar"
            interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema">
      <value purge="false">undo redo | styleselect | bold italic superscript | bullist numlist | nonbreaking | plonelink unlink | fullscreen | text_expand | suggest_titles | ia</value>
    </record>
</registry>
