<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    name="imio.smartweb.NewsView"
    meta_type="Dexterity FTI"
    i18n:domain="imio.smartweb">

  <!-- Basic properties -->
  <property
      i18n:translate=""
      name="title">NewsView</property>
  <property
      i18n:translate=""
      name="description">Display linked news from imio news instance.</property>

  <property name="icon_expr"></property>

  <!-- Hierarchy control -->
  <property name="global_allow">True</property>

  <!-- Schema, class and security -->
  <!-- if we can add a page, we can add a page section -->
  <property name="add_permission">imio.smartweb.core.AddPage</property>
  <property name="klass">imio.smartweb.core.contents.NewsView</property>
  <property name="schema">imio.smartweb.core.contents.INewsView</property>

  <!-- Enabled behaviors -->
  <property name="behaviors" purge="false">
    <element value="plone.namefromtitle"/>
    <element value="plone.locking"/>
  </property>

</object>
